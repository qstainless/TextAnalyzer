<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gce.controller.TextAnalyzerUIController">
    <children>
        <MenuBar prefHeight="29.0" prefWidth="640.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane dividerPositions="0.2" orientation="VERTICAL" prefHeight="400.0" prefWidth="640.0"
                   AnchorPane.topAnchor="29.0">
            <items>
                <AnchorPane prefWidth="638.0">
                    <children>
                        <Label fx:id="urlLabel" layoutX="10.0" layoutY="18.0" text="URL to parse"/>
                        <TextField fx:id="urlTextField" layoutX="90.0" layoutY="13.0" prefHeight="27.0"
                                   prefWidth="460.0"/>
                        <Button fx:id="analyzeButton" layoutX="560.0" layoutY="13.0" mnemonicParsing="false"
                                onAction="#handleAnalyzeButtonAction" text="Analyze!"/>
                        <Label fx:id="messageLabel" layoutX="90.0" layoutY="46.0" prefWidth="460.0"/>
                    </children>
                    <padding>
                        <Insets top="29.0"/>
                    </padding>
                </AnchorPane>
                <AnchorPane>
                    <children>
                        <ScrollPane prefHeight="330.0" prefWidth="630.0">
                            <content>
                                <AnchorPane prefHeight="328.0" prefWidth="612.0">
                                    <children>
                                        <TextArea fx:id="console" layoutX="14.0" layoutY="14.0" prefHeight="328.0" prefWidth="612.0"/>
                                    </children>
                                </AnchorPane>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
